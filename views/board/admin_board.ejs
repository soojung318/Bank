<body class="board-page">

    <%- include('../menu.html') %>

  <main class="main">

    <!-- Page Title -->
    <div class="page-title dark-background" data-aos="fade" style="background-image: url(assets/img/page-title-bg.jpg);">
      <div class="container position-relative">
        <h1>게시판 관리</h1>
        <p>게시글을 수정,삭제,답변할 수 있습니다</p>
        <nav class="breadcrumbs">
          <ol>
            <li><a href="/">Home</a></li>
            <li class="current">게시판</li>
          </ol>
        </nav>
      </div>
    </div><!-- End Page Title -->
    <table class="table table-hover text-center container mt-4" style="border-collapse: collapse;">
      <thead>
        <tr style="border-bottom: 1px solid #dee2e6;">
          </tr>
      </thead>
      <tbody>
        <% for(let i = 0; i < data.length; i++){ %>
          <tr style="border-top: 1px solid #dee2e6;">
            <td><%= data[i].boardtype %></td>
            <td data-bs-toggle="modal" data-bs-target="#myModal">
              <a href="#" onclick="modal_content(`<%= data[i]._id %>`,`<%= data[i].title %>`,`<%= data[i].content %>`, `<%= data[i].date %>`, `<%= data[i].path %>`)"><%= data[i].title %></a>
            </td>
            <td><%= data[i].id %></td>
            <td><%= data[i].date %></td>
            <td <% if(data[i].answer==1){ %> disabled <% } %>><button class="answer btn btn-outline-primary" data-id="<%= data[i]._id %>">답변하기</button></td>
            <td><button class="delete btn btn-outline-danger" data-id="<%= data[i]._id %>">삭제</button></td>
          </tr>
          <% } %>
      </tbody>
  </table>
  <nav aria-label="Page navigation">
    <ul class="pagination justify-content-center">
      <% if (currentPage > 1) { %>
      <li class="page-item">
        <a class="page-link" href="/board/admin_board?page=<%= currentPage - 1 %>">Previous</a>
      </li>
      <% } %>
      <li class="page-item">
        <span class="page-link"><%= currentPage %></span>
      </li>
      <% if (currentPage < totalPages) { %>
      <li class="page-item">
        <a class="page-link" href="/board/admin_board?page=<%= currentPage + 1 %>">Next</a>
      </li>
      <% } %>
    </ul>
  </nav>

</main>
   
