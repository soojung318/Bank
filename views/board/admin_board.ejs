    $(document).ready(function() {
  $(".answer").click(function(e) {
    e.preventDefault();
    let postId = $(this).data("id");
    $("#postId").val(postId); // Set the postId value in the hidden input field
    $("#answerModal").modal("show"); // Show the modal
  });

  $("#answerForm").submit(function(e) {
    e.preventDefault();
    let form = $(this);
    $.ajax({
      type: form.attr("method"),
      url: form.attr("action"),
      data: form.serialize(),
      success: function(response) {
        console.log("Answer submitted successfully:", response);
        $("#answerModal").modal("hide"); // Hide the modal after successful submission
        // Optionally, update UI or perform other actions after submission
      },
      error: function(error) {
        console.error("Error submitting answer:", error);
        // Handle errors if necessary
      }
    });
  });
});

      
